                "image": "https://yt3.googleusercontent.com/ytc/AIdro_kX4_WfJdGDgV_JzWf_JzWf_JzWf_JzWf_JzWf=s900-c-k-c0x00ffffff-no-rj",
                "url": "exo:https://mn-nl.mncdn.com/yabantv/yabantv/playlist.m3u8"
              }
            ]
          },
          {
            "title": "Dizi & Film (Test)",
            "channels": [
              {
                "name": "Dizi Botu",
                "image": "https://images.unsplash.com/photo-1574375927938-d5a98e8ffe85?w=300",
                "url": "http://infinix1453.pw/fdizi",
                "type": "web",
                "badge": "BOT"
              },
              {
                "name": "Big Buck Bunny",
                "image": "https://upload.wikimedia.org/wikipedia/commons/thumb/c/c5/Big_buck_bunny_poster_big.jpg/1200px-Big_buck_bunny_poster_big.jpg",
                "url": "exo:http://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4"
              }
            ]
          }
        ];

        function renderPlaylist() {
            const contentArea = document.getElementById('content-area');
            let html = '';

            playlistData.forEach(category => {
                html += `
                <div class="category-section">
                    <div class="category-title">${category.title}</div>
                    <div class="scrolling-wrapper">
                `;

                category.channels.forEach(channel => {
                    let badgeClass = '';
                    if (channel.badge === 'HD') badgeClass = 'hd';
                    if (channel.badge === 'MAÇ') badgeClass = 'mac';
                    const badgeHtml = channel.badge ? `<span class="badge ${badgeClass}">${channel.badge}</span>` : '';
                    
                    // URL'deki tek tırnakları temizle
                    const safeUrl = channel.url.replace(/'/g, "\\'");

                    html += `
                        <div class="card" onclick="openLink('${safeUrl}')">
                            ${badgeHtml}
                            <img src="${channel.image}" alt="${channel.name}" loading="lazy">
                            <div class="card-overlay">
                                <div class="card-title">${channel.name}</div>
                            </div>
                        </div>
                    `;
                });

                html += `</div></div>`;
            });
            contentArea.innerHTML = html;
        }

        function openLink(url) {
            window.location.href = url;
        }

        renderPlaylist();
    </script>
</body>
</html>

